<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--TabLayout-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/register_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:tabBackground="@drawable/selector_register_tablayout"
        app:tabGravity="center"

        app:tabIndicator="@null"
        app:tabPaddingEnd="5dp"
        app:tabPaddingStart="5dp"
        app:tabRippleColor="@color/transparent"

        app:tabSelectedTextColor="@color/white_light"
        app:tabTextAppearance="@style/tv_body_b_11"
        app:tabTextColor="@color/transparent" />

    <!--Viewpager: 1. 정보 입력 2. 목표 설정-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/register_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_tb" />

</androidx.constraintlayout.widget.ConstraintLayout>